{% extends 'admin/base.html.twig' %}
{% block body %}
<h1>Acteurs</h1>
<a href="{{ path('admin_casts_new')}}" class="btn btn-primary" >Nouveau Acteur</a>
    <div class="block-admin">
        <table class="table table-condensed">
            <thead>
                <th>prenom</th>
                <th>Nom</th>
                <th>Alias</th>
                <th colspan="2"></th>
            </thead>
            <tbody>
             {% for cast in casts %}
            <tr>
                <td>
                    <a href="{{ path('admin_casts_show',{'id': cast.id}) }}">
                    {{ cast.firstName }}
                    </a>
                </td>
                <td>{{ cast.lastName }}</td>
                <td>{{ cast.nickname }}</td>
                <td><a href="{{ path('admin_casts_edit')}}"><i class="fas fa-edit"></i></a></td>
                <td><a href="{{ path('admin_casts_delete',{'id': cast.id}) }}"><i class="fas fa-trash-alt"></i></a></td>
            </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>
{% endblock %}