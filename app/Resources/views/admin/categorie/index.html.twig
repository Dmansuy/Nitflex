{% extends 'admin/base.html.twig' %}
{% block body %}
<h1>Categories</h1>
<a href="{{ path('admin_categories_new')}}"  class="btn btn-primary">Nouvelle Categorie</a>
    <div class="block-admin">
        <table class="table table-condensed" >
            <thead>
                <th>Nom</th>
                <th colspan="3"></th>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td><a href="{{ path('admin_categories_show',{'id': category.id}) }}">{{ category.nameCategory }}</a></td>
                    <td><a href="{{ path('admin_categories_edit')}}"><i class="fas fa-edit"></i></a></td>
                    <td><a href="{{ path('admin_categories_delete',{'id': category.id}) }}"><i class="fas fa-trash-alt"></i></a></td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>
{% endblock %}