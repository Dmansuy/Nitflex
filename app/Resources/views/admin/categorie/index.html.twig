{% extends 'admin/base.html.twig' %}
{% block body %}
<h1>Categories</h1>
<a href="{{ path('admin_categories_new')}}"  class="btn btn-primary">Nouvelle Categorie<a>
    <table class="table table-condensed" >
        <thead>
        <th>Nom</th>
        <th colspan="3"></th>
        </thead>
        <tbody>
        {% for category in categories %}
        <tr>
            <td><a href="{{ path('admin_categories_show',{'id': category.id}) }}">{{ category.nameCategory }}</a></td>
            <td><a href="{{ path('admin_categories_edit')}}">Modifier</a></td>
            <td><a href="{{ path('admin_categories_delete',{'id': category.id}) }}">Supprimer</a></td>
        </tr>
        </tbody>
        {% endfor %}
    </table>
{% endblock %}