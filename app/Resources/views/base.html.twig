<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link href="https://use.fontawesome.com/releases/v5.0.7/css/all.css" rel="stylesheet">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
<header>
    <nav class="navbar navbar-default">
        <ul class="nav navbar-nav">
            <li><a href="{{ path('admin_films') }}">Films</a></li>
            <li><a href="{{ path('admin_categories') }}">Categories</a></li>
            <li><a href="{{ path('admin_casts') }}">Acteurs</a></li>
            <li><a href="{{ path('admin_studios') }}">Studio</a></li>
            <li><a href="{{ path('admin_users') }}">User</a></li>
        </ul>
    </nav>
</header>
<header>
    <nav class="navbar navbar-inverse">
        <ul class="nav navbar-nav">
            <li><a class="textRed" href="{{ path('films_list') }}"><i class="fas fa-film"></i> Les Films</a></li>
            <li><a class="textRed" href="{{ path('prefer_list',{'id': userInSession.id}) }}"><i class="far fa-heart"></i> Ma Liste</a></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle textRed" data-toggle="dropdown" role="button" aria-haspopup="true"
                   aria-expanded="false">Categories <span class="caret"></span></a>
                <ul class="dropdown-menu black">
                    {% for uneCat in listCategories %}
                        <li><a class="textRed" href="{{ path('la_categorie',{'id': uneCat.id}) }}">
                                {{ uneCat.nameCategory }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </li>
            <li><a href="{{ path('search_film') }}" class="textRed"><i class="fas fa-search"></i> Recherche</a></li>
        </ul>
        <ul class="nav navbar-right">
            <li class="dropdown">
                <a href="#" style="line-height: 31px;" class="dropdown-toggle textRed" data-toggle="dropdown"
                   role="button" aria-haspopup="true" aria-expanded="false">Mon Compte <span class="caret"></span></a>
                <ul class="dropdown-menu black">
                    <li><a class="textRed" href="">
                            Modifier
                        </a>
                    </li>
                    <li><a class="textRed" href="{{ path('logout') }}">
                            DÃ©connexion
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </nav>
</header>
<div class="container">
    {% block body %}{% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        <script src="{{ asset('js/imagesLoaded.js') }}"></script>
        <script src="{{ asset('js/masonry.js') }}"></script>
        <script src="{{ asset('js/app.js') }}"></script>
    {% endblock %}
</div>
<footer>
</footer>

</body>
</html>
