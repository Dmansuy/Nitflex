{% extends 'base.html.twig' %}
{% block body %}
{{ form(form) }}
    <div class="conteneur-mas">
{% for film in films %}
        <div class="Unfilm">
            <div class="thumbnail">

                <a href="{{ path('films_details', {'id' : film.id}) }}"><img width="300" height="450" src="{{asset('public/uploads/affiches/'~film.affiche)}}"></a>
                <div class="caption">
                    <div class="floatL70">
                        <h3>{{ film.title }} </h3>
                    </div>
                    <div class="floatL30">
                        <a class="btn-list" href=""><i class="far fa-plus-square"></i></a>
                    </div>
                    <br class="clearF">

                </div>
            </div>
        </div>
{% endfor %}
    </div>
{% endblock %}