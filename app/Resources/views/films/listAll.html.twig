{% extends 'base.html.twig' %}
{% block body %}
    <h1 class="red">
    {% if categorie %}
       {{ categorie.nameCategory }}
    {% else %}
         Films
    {% endif %}
    </h1>
    <hr>
    <div class="conteneur-mas">
    {% for film in film %}
        <div class="Unfilm">
            <div class="thumbnail">
           <a href="{{ path('films_details', {'id' : film.id}) }}"><img width="300" height="450" src="{{asset('public/uploads/affiches/'~film.affiche)}}"></a>
                <div class="caption">
                    <div class="floatL70">
                        <h3>{{ film.title }} </h3>
                    </div>
                    <div class="floatL30">
                       <a class="btn-list" href="{{ path('prefer_list_add', {'id' : film.id}) }}"><i class="far fa-plus-square"></i></a>
                    </div>
                    <br class="clearF">

                </div>
            </div>
        </div>

    {% endfor %}
    </div>
{% endblock %}